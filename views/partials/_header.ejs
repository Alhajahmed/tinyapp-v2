<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
      <!-- Navbar toggler icon -->
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <!-- Link to "My URLs" page -->
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <!-- Link to "Create New URL" page -->
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (user) { %>
    <!-- If user is logged in -->
    <form method="POST" action="/logout">
      <!-- Show logout button -->
      <button type="submit" class="btn btn-primary">Logout</button>
    </form>
    <!-- Display user email -->
    <p class="navbar-text">Logged in as: <%= user.email %></p>
    <% } else { %>
    <!-- Link to "Login" page -->
    <a class="nav-item nav-link" href="/login">Login</a>
    <!-- Link to "Register" page -->
    <a class="nav-item nav-link" href="/register">Register</a>
    <% } %>
  </nav>
</header>
